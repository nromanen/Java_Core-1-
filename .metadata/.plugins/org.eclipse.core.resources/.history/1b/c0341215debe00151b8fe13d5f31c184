
public class SomeJavaArray {

	public static void main(String[] args) {
		
		int [] onearray = new int [10];
		int A = 0;
		int S = 0;
		int Z = 0;
		int count = 0;
		int[] k = new int[]{0};
			for (count = 0; count < onearray.length; count++) {onearray[count] = (int)(Math.random()*50-25);
			}
			
		System.out.println("Вихідний масив");
		
			for (count = 0; count < onearray.length; count++) {
				
		System.out.println("onearray [" + count + "] =" + onearray[count]);
		}
			
			for (count = 0; count < onearray.length; count++) {
				
			if (onearray[count] < 0) {
				A *= onearray[count];}
			if (onearray[count] > 0){
				S *= onearray[count];}
			if (onearray[count] == 0){
				Z++;}
		
		}
			for (int count1 = 0; count1<onearray.length; count1++){
				if (onearray[count1] <0 && onearray[count1]<k[0]){
					
					k[0] = onearray[count1];
					
					}
					
				}
		System.out.println("Добуток від'ємних значень = " + A);
		System.out.println("Добуток додатніх значень значень = " + S);
		System.out.println("Game over " + Z + " times");
	}

}
